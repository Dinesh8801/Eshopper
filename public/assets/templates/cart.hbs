{{#each items}}
<div class="cart-item p-3" data-productid="{{this.PRODUCT_ID}}" style="border: 1px solid grey; height: 180px; overflow: hidden;">
    <div class="d-flex flex-row">
        <img class="col-2 img-fluid" src="{{this.PRODUCTPATH}}" style="width="100%" height="120px" object-fit: cover;" alt="{{this.PRODUCT}}">
        <div class="col-6 p-2" style="flex-grow: 1;">
            <h5>{{this.PRODUCT}}</h5>
            <p>Price: <span class="item-price" data-price="{{this.PRICE}}">${{this.PRICE}}</span></p>
        </div>
        <div class="col-2">
            <p>
                Quantity: 
                <select class="quantity-select" data-price="{{this.PRICE}}">
                    {{#each (range 1 3)}}
                        <option value="{{this}}" {{#if (eq this ../QUANTITY)}}selected{{/if}}>{{this}}</option>
                    {{/each}}
                </select>
            </p>
        </div>
        <div data-bs-toggle="modal" data-bs-target="#removeItem" class="col-2 d-flex justify-content-end close">
            <i class="bi bi-x-circle-fill"></i>
        </div>
    </div>
</div>
{{/each}}
